{
  "name": "Onatrix Rte",
  "alias": "Onatrix.Rte",
  "extensions": [
    {
      "type": "tiptapToolbarExtension",
      "kind": "styleMenu",
      "alias": "Onatrix.Tiptap.StyleMenu",
      "name": "Onatrix Tiptap Style Menu",
      "meta": {
        "alias": "OnatrixStyleMenu",
        "icon": "icon-palette",
        "label": "Onatrix styles"
      },
      "items": [
        {
          "label": "Paragraphs",
          "items": [
            {
              "label": "XL - 70",
              "items": [
                {
                  "label": "Light",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xl font-light"
                  },
                  "appearance": {}
                },
                {
                  "label": "Normal",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xl font-regular"
                  },
                  "appearance": {}
                },
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xl font-bold"
                  },
                  "appearance": {}
                }
              ]
            },
            {
              "label": "L - 40",
              "items": [
                {
                  "label": "Light",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-lg font-light"
                  }
                },
                {
                  "label": "Normal",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-lg font-regular"
                  }
                },
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-lg font-bold"
                  }
                }
              ]
            },
            {
              "label": "M - 20",
              "items": [
                {
                  "label": "Light",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-md font-light"
                  }
                },
                {
                  "label": "Normal",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-md font-regular"
                  }
                },
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-md font-bold"
                  }
                }
              ]
            },
            {
              "label": "S - 16",
              "items": [
                {
                  "label": "Light",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-sm font-light"
                  }
                },
                {
                  "label": "Normal",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-sm font-regular"
                  }
                },
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-sm font-bold"
                  }
                }
              ]
            },
            {
              "label": "XS - 14",
              "items": [
                {
                  "label": "Light",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xs font-light"
                  }
                },
                {
                  "label": "Normal",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xs font-regular"
                  }
                },
                {
                  "label": "Bold",
                  "data": {
                    "tag": "p",
                    "class": "text-rte-xs font-bold"
                  }
                }
              ]
            }
          ]
        },
        {
          "label": "Bullets",
          "data": {
            "tag": "ul",
            "class": "rte-ul"
          }
        }
      ]
    },
    {
      "type": "tiptapToolbarExtension",
      "kind": "styleMenu",
      "alias": "Onatrix.Tiptap.BrandColors",
      "name": "Onatrix Brand Colors",
      "meta": {
        "alias": "onatrixBrandColors",
        "label": "Onatrix Colors"
      },
      "items": [
        {
          "label": "Primary",
          "data": {
            "tag": "span",
            "class": "text-primary"
          },
          "appearance": {
            "style": "background-color:#4F5955; color:#fff; padding:5px;"
          }
        },
        {
          "label": "Secondary",
          "data": {
            "tag": "span",
            "class": "text-sub-2"
          },
          "appearance": {
            "style": "background-color:#D9C3A9; color:#fff; padding:5px;"
          }
        },
        {
          "label": "Body",
          "data": {
            "tag": "span",
            "class": "text-primary"
          },
          "appearance": {
            "style": "background-color:#535656; color:#fff; padding:5px;"
          }
        },
        {
          "label": "Body-Light",
          "data": {
            "tag": "span",
            "class": "text-body-text-100"
          },
          "appearance": {
            "style": "background-color:#999999; color:#fff; padding:5px;"
          }
        }
      ]
    },
    {
      "type": "tiptapToolbarExtension",
      "kind": "styleMenu",
      "alias": "Onatrix.Tiptap.ImageSizes",
      "name": "Onatrix Image Sizes",
      "meta": {
        "alias": "OnatrixImageSizes",
        "icon": "icon-picture",
        "label": "Image sizes"
      },
      "items": [
        {
          "label": "Small (25%)",
          "data": {
            "tag": "img",
            "class": "img-small"
          },
          "appearance": {
            "style": "width:25%;"
          }
        },
        {
          "label": "Medium (50%)",
          "data": {
            "tag": "img",
            "class": "img-medium"
          },
          "appearance": {
            "style": "width:50%;"
          }
        },
        {
          "label": "Large (75%)",
          "data": {
            "tag": "img",
            "class": "img-large"
          },
          "appearance": {
            "style": "width:75%;"
          }
        },
        {
          "label": "Full (100%)",
          "data": {
            "tag": "img",
            "class": "img-full"
          },
          "appearance": {
            "style": "width:100%;"
          }
        },

        {
          "label": "Alignment",
          "items": [
            {
              "label": "Left",
              "data": {
                "tag": "img",
                "class": "img-left"
              },
              "appearance": { "style": "display:block; margin-right:auto;" }
            },
            {
              "label": "Center",
              "data": {
                "tag": "img",
                "class": "img-center"
              },
              "appearance": { "style": "display:block; margin:auto;" }
            },
            {
              "label": "Right",
              "data": {
                "tag": "img",
                "class": "img-right"
              },
              "appearance": { "style": "display:block; margin-left:auto;" }
            }
          ]
        }
      ]
    }
  ]
}
