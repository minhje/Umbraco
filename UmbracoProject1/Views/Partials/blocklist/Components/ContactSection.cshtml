@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels
@{
    var content = (ContentModels.ContactSection)Model.Content;
    var rootContent = Umbraco.ContentAtRoot();
    var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();

    var contactAdress = siteSettings?.ContactAdress ?? "Ingen adress angiven";
    var contactPhone = siteSettings?.ContactPhone ?? "Inget telefonnummer angivet";
    var contactEmail = siteSettings?.ContactEmain ?? "Ingen email-adress angiven";
}

<section class="py-[4rem]">
    <div class="mx-auto flex max-w-5xl flex-row items-center justify-center gap-8 px-4">

        <div class="w-1/2">
            @if (@content.ContactImage != null)
            {
                <img class="h-full w-full" src="@content.ContactImage.Url()" alt="@content.ContactImage.Name">
            }
        </div>

        <div class="w-1/2">
            <h3 class="mb-4 text-2xl font-bold text-primary">@content.ContactTitle</h3>

            <div class="flex flex-col gap-8">
                <div class="flex flex-row items-center gap-2">
                    <i class="fa-solid fa-location-dot text-2xl text-sub-2"></i>
                    <div class="flex flex-col">
                        <p class="font-semibold text-primary">@content.ContactLocationLabel</p>
                        <p class="text-body-text">@contactAdress</p>
                    </div>
                </div>

                <div class="flex flex-row items-center gap-2">
                    <i class="fa-solid fa-phone text-2xl text-sub-2"></i>
                    <div class="flex flex-col">
                        <p class="font-semibold text-primary">@content.ContactPhoneLabel</p>
                        <p class="text-body-text">@contactPhone</p>
                    </div>
                </div>

                <div class="flex flex-row items-center gap-2">
                    <i class="fa-solid fa-envelope text-2xl text-sub-2"></i>
                    <div class="flex flex-col">
                        <p class="font-semibold text-primary">@content.ContactEmailLabel</p>
                        <p class="text-body-text">@contactEmail</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>