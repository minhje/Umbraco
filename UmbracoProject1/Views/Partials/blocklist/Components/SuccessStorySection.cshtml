@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels
@{
    var content = (ContentModels.SuccessStorySection)Model.Content;
}

<section class="relative bg-white py-[5rem]">

    <div class="absolute inset-0 flex max-h-[52rem] items-center justify-center bg-primary">
        @if (@content.SuccessStoryBgImage != null)
        {
            <img class="max-w-4xl object-cover" src="@content.SuccessStoryBgImage.Url()" alt="@content.SuccessStoryBgImage.Name">
        }
    </div>

    <div class="relative z-10 mx-auto max-w-4xl px-4">
        <div class="flex flex-col gap-8">
            <p class="text-center font-bold text-sub-2 text-[0.875rem] uppercase">@content.SuccessStoryLabel</p>
            <h1 class="text-center leading-none font-bold text-white text-[2.5rem]">@content.SuccessStoryTitle</h1>

            <div class="flex flex-row justify-between p-3 align-top">
                <div class="rte w-[11rem]">@Html.Raw(content.SuccessStoryCustomers)</div>
                <div class="rte w-[11rem]">@Html.Raw(content.SuccessStoryProjects)</div>
                <div class="rte w-[11rem]">@Html.Raw(content.SuccessStoryBranches)</div>
            </div>
        </div>
    </div>

    <div class="mt-5 flex items-center justify-center">
        @if (@content.SuccessStoryImage != null)
        {
            <img class="z-50 max-w-4xl object-cover" src="@content.SuccessStoryImage.Url()" alt="@content.SuccessStoryImage.Name">
        }
    </div>
</section>