@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels
@using UmbracoProject1.ViewModels
@{
    var content = (ContentModels.AboutCallbackSection)Model.Content;
    var settings = Model.Settings as ContentModels.AboutCallbackSettings;
}

<section class="py-28">
    <div class="mx-auto flex max-w-7xl gap-10 px-4">

        <div class="flex w-7/12 flex-col">
            <div class="rte">
                @Html.Raw(content.AboutCallbackSectionBody)
            </div>
        </div>

        <div class="z-[99] -mt-[11rem] flex w-5/12 flex-col bg-white shadow-md">
            <div class="bg-primary">
                <p class="text-sub-2 px-[2rem] py-[1.5rem] font-bold text-[1.875rem]">@content.AboutCallbackFormTitle</p>
            </div>
            <p class="px-[2rem] py-[1.5rem] text-sm italic">@content.AboutCallbackFormDescription</p>

        <partial name="Partials/Forms/_CallbackForm" model="new CallbackFormViewModel()"/>
        </div>


    </div>
</section>